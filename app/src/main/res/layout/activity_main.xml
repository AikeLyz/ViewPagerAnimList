<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@null"
        android:paddingLeft="10dip" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner"
        android:layout_marginBottom="60dip"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/rl_bottom_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_bottom_1"
                android:layout_width="38dip"
                android:layout_height="38dip"
                android:background="@mipmap/icon_check"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/iv_bottom_11"
                android:layout_width="38dip"
                android:layout_height="38dip"
                android:background="@mipmap/icon_checknull"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tv_bottom_1"
                style="@style/TextView_default"
                android:text="你是天"
                android:layout_below="@id/iv_bottom_1"
                android:layout_marginTop="2dip"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_bottom_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_bottom_2"
                android:layout_width="38dip"
                android:layout_height="38dip"
                android:background="@mipmap/icon_check"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/iv_bottom_22"
                android:layout_width="38dip"
                android:layout_height="38dip"
                android:background="@mipmap/icon_checknull"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tv_bottom_2"
                style="@style/TextView_default"
                android:text="你是地"
                android:layout_below="@id/iv_bottom_2"
                android:layout_marginTop="2dip"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_bottom_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_bottom_3"
                android:layout_width="38dip"
                android:layout_height="38dip"
                android:background="@mipmap/icon_check"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/iv_bottom_33"
                android:layout_width="38dip"
                android:layout_height="38dip"
                android:background="@mipmap/icon_checknull"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tv_bottom_3"
                style="@style/TextView_default"
                android:text="你是唯一"
                android:layout_below="@id/iv_bottom_3"
                android:layout_marginTop="2dip"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_bottom_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_bottom_4"
                android:layout_width="38dip"
                android:layout_height="38dip"
                android:background="@mipmap/icon_check"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/iv_bottom_44"
                android:layout_width="38dip"
                android:layout_height="38dip"
                android:background="@mipmap/icon_checknull"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tv_bottom_4"
                style="@style/TextView_default"
                android:text="的神话"
                android:layout_below="@id/iv_bottom_4"
                android:layout_marginTop="2dip"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>